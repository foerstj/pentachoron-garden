[mr_miller]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		screen_text = "Hello there young fella, welcome to the Garden!";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 1;
		screen_text = "My name is Mr. Miller, I am the miller here - and kind of like a mayor to this place.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 2;
		screen_text = "Pleasure to meet you. It's not often we have visitors here, you see. Sure, this place is a bit off the beaten track... and maybe not in the best shape here and there... but I'm sure you'll like it here!";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 3;
		screen_text = "If you need anything, ask my wifey inside. Our stocks are a bit limited right now, but I'm sure we have all you need to get you started.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		screen_text = "Enjoy your time at the Garden!";
	  f scroll_rate = 10.000000;
	}
}
[mrs_miller]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		screen_text = "Hello there, stranger. Welcome to Pentachoron Garden!";
