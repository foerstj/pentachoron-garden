[molly_miller]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		screen_text = "Hello outlander! Heading out for a walk in the Garden?";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		activate_quest* = beast_park_phrak_queen,0;
		choice = more;
	  i order = 1;
	  b quest_dialogue = true;
		screen_text = "I totally recommend you to go down to the Farm, they have such cute animals there. They sell pack mules, by the way. And the way through the Park is really pretty, and there are no beasts or big animals around, just the phraks can be annoying at times. If you see a phrak queen do smash it.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		screen_text = "So as I said, have a nice walk through the Park! And make sure to talk with mum and dad, they'll help you out!";
